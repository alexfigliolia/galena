{
	"tsx": {
		"typeCheck": false,
		"compilerOptions": {
			"module": "CommonJS",
			"moduleResolution": "Node"
		}
	},
	"compilerOptions": {
		"target": "ES2015",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": "./src",
		"paths": {
			"Galena/*": [
				"Galena/*"
			],
			"Middleware/*": [
				"Middleware/*"
			],
			"Middlewares/*": [
				"Middlewares/*"
			]
		}
	},
	"include": [
		"src",
		"ci",
		".eslintrc.cjs",
		"**/*.json",
		"**/*.ts",
		"**/*.js"
	],
	"exclude": [
		"coverage",
		"dist",
		"node_modules"
	]
}